{
  "name": "platform-web-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Primary user-facing web application for the SaaS platform",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
